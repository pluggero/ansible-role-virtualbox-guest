{
  "extends": ["config:best-practices", ":disableRateLimiting"],
  "enabledManagers": ["github-actions", "pip_requirements", "regex"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^defaults/main\\.yml$", "^.github/workflows/ci\\.yml$"],
      "matchStrings": [
        "virtualbox_guest_virtualbox_version:\\s+\"(?<currentValue>[\\d\\.]+)\"",
        "VBOX_VERSION:\\s+\"(?<currentValue>[\\d\\.]+)\""
      ],
      "datasourceTemplate": "custom.virtualbox",
      "depNameTemplate": "virtualbox",
      "versioningTemplate": "semver"
    }
  ],
  "customDatasources": {
    "virtualbox": {
      "defaultRegistryUrlTemplate": "https://download.virtualbox.org/virtualbox/LATEST-STABLE.TXT",
      "format": "plain"
    }
  },
  "packageRules": [
    {
      "matchPackageNames": ["virtualbox"],
      "groupName": "Update Virtualbox version"
    }
  ]
}
